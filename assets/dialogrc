# $Id: slackware.rc,v 1.10 2012/12/01 00:36:55 tom Exp $
# vile:confmode
# Run-time configuration file for dialog, matches Slackware color scheme.
#
# Types of values:
#
# Number     -  <number>
# String     -  "string"
# Boolean    -  <ON|OFF>
# Attribute  -  (foreground,background,highlight?)

# Set aspect-ration.
aspect = 0

# Set separator (for multiple widgets output).
separate_widget = ""

# Set tab-length (for textbox tab-conversion).
tab_len = 0

# Make tab-traversal for checklist, etc., include the list.
visit_items = OFF

# Shadow dialog boxes? This also turns on color.
use_shadow = OFF

# Turn color support ON or OFF
use_colors = ON

# Screen color
screen_color = (DEFAULT,DEFAULT,OFF)

# Shadow color
shadow_color = (DEFAULT,DEFAULT,OFF)

# Dialog box color
dialog_color = (DEFAULT,DEFAULT,OFF)

# Dialog box title color
title_color = (DEFAULT,DEFAULT,OFF)

# Dialog box border color
border_color = (DEFAULT,DEFAULT,OFF)

# Active button color
button_active_color = (DEFAULT,DEFAULT,ON)

# Inactive button color
button_inactive_color = (DEFAULT,DEFAULT,OFF)

# Active button key color
button_key_active_color = button_active_color

# Inactive button key color
button_key_inactive_color = (DEFAULT,DEFAULT,OFF)

# Active button label color
button_label_active_color = button_active_color

# Inactive button label color
button_label_inactive_color = (DEFAULT,DEFAULT,OFF)

# Input box color
inputbox_color = (DEFAULT,DEFAULT,OFF)

# Input box border color
inputbox_border_color = border_color

# Search box color
searchbox_color = (DEFAULT,DEFAULT,OFF)

# Search box title color
searchbox_title_color = (DEFAULT,DEFAULT,OFF)

# Search box border color
searchbox_border_color = (DEFAULT,DEFAULT,OFF)

# File position indicator color
position_indicator_color = button_key_inactive_color

# Menu box color
menubox_color = dialog_color

# Menu box border color
menubox_border_color = border_color

# Item color
item_color = (DEFAULT,DEFAULT,OFF)

# Selected item color
item_selected_color = (DEFAULT,DEFAULT,ON)

# Tag color
tag_color = (DEFAULT,DEFAULT,OFF)

# Selected tag color
tag_selected_color = (DEFAULT,DEFAULT,ON)

# Tag key color
tag_key_color = (DEFAULT,DEFAULT,OFF)

# Selected tag key color
tag_key_selected_color = (DEFAULT,DEFAULT,ON)

# Check box color
check_color = (DEFAULT,DEFAULT,OFF)

# Selected check box color
check_selected_color = (DEFAULT,DEFAULT,ON)

# Up arrow color
uarrow_color = (DEFAULT,DEFAULT,OFF)

# Down arrow color
darrow_color = uarrow_color

# Item help-text color
itemhelp_color = shadow_color

# Active form text color
form_active_text_color = inputbox_color

# Form text color
form_text_color = (DEFAULT,DEFAULT,OFF)

# Readonly form item color
form_item_readonly_color = (DEFAULT,DEFAULT,OFF)

# Dialog box gauge color
gauge_color = (DEFAULT,DEFAULT,OFF)

# Dialog box border2 color
border2_color = dialog_color

# Input box border2 color
inputbox_border2_color = border2_color

# Search box border2 color
searchbox_border2_color = border2_color

# Menu box border2 color
menubox_border2_color = border2_color